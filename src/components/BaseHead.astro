---
// BaseHead is the shared head component used across pages. It injects global CSS, fonts, favicons, SEO/meta tags (Open Graph/Twitter), the RSS link, and the Clerk auth script. Pages include it in their <head> via <BaseHead ... /> to keep head content consistent.
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import '../styles/global.css';
import type { ImageMetadata } from 'astro';
import FallbackImage from '../assets/blog-placeholder-1.jpg';
import ProfilePic from '../assets/profile.png';
import { SITE_TITLE } from '../consts';

interface Props {
	title: string;
	description: string;
	image?: ImageMetadata;
	imageUrl?: string; // optional absolute/relative URL for social sharing
	faviconUrl?: string; // optional custom favicon URL
	isUserPage?: boolean; // whether this is a user page
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = FallbackImage, imageUrl, faviconUrl, isUserPage } = Astro.props as Props;

// Create cookie emoji favicon data URL for master pages
const cookieFaviconDataUrl = 'data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><text y=".9em" font-size="90">üç™</text></svg>';

// Determine favicon URL
const finalFaviconUrl = faviconUrl || (isUserPage ? ProfilePic.src : cookieFaviconDataUrl);
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/png" href={finalFaviconUrl} />
<link rel="apple-touch-icon" href={finalFaviconUrl} />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Dark theme only: removed theme switcher and auto detection -->

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageUrl ? new URL(imageUrl, Astro.url) : new URL(image.src, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageUrl ? new URL(imageUrl, Astro.url) : new URL(image.src, Astro.url)} />

<!-- Clerk Authentication -->
<script
  async
  crossorigin="anonymous"
  data-clerk-publishable-key={import.meta.env.PUBLIC_CLERK_PUBLISHABLE_KEY}
  src="https://set-elephant-12.clerk.accounts.dev/npm/@clerk/clerk-js@latest/dist/clerk.browser.js"
  type="text/javascript">
</script>

<!-- Lucide Icons (global) -->
<script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
<script is:inline>
  // Initialize Lucide icons when DOM is ready
  (function(){
    function init(){
      if (typeof lucide !== 'undefined') {
        try { lucide.createIcons(); } catch {}
      }
    }
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }
  })();
  </script>
