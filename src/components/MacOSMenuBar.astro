      </svg>
    </div>
    <div class="menu-items">
      <span class="menu-item active">Ashvin</span>
      <span class="menu-item">File</span>
      <span class="menu-item">Edit</span>
      <span class="menu-item">View</span>
      <span class="menu-item">Window</span>
      <span class="menu-item">Help</span>
    </div>
  </div>
  
  <div class="menu-right">
    <div class="status-icons">
      <!-- WiFi Icon -->
      <div class="status-icon">
        <i data-lucide="wifi"></i>
      </div>
      
      <!-- Battery Icon -->
      <div class="status-icon">
        <i data-lucide="battery"></i>
      </div>
      
      <!-- Search Icon -->
      <div class="status-icon">
        <i data-lucide="search"></i>
      </div>
      
      <!-- Control Center Icon -->
      <div class="status-icon">
        <i data-lucide="grid-3x3"></i>
      </div>
    </div>
    
    <div class="clock" id="macos-clock">
      Thu 12 Sep 6:33 PM
    </div>
  </div>
</div>

<style>
  .macos-menu-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 24px;
    background: hsl(0 0% 0% / 0.45);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-subtle);
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 12px;
    font-size: 13px;
    font-weight: 500;
    color: var(--typography-quote);
    z-index: 1000;
    user-select: none;
  }

  .menu-left {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .apple-logo {
    display: flex;
    align-items: center;
    padding: 0 8px;
    height: 24px;
    color: var(--typography-link);
  }

  .apple-logo:hover {
    background: var(--color-border-subtle);
    border-radius: 4px;
  }

  .menu-items {
    display: flex;
    align-items: center;
    gap: 2px;
  }

  .menu-item {
    padding: 0 8px;
    height: 24px;
    display: flex;
    align-items: center;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.15s ease;
  }

  .menu-item:hover {
    background: var(--color-border-subtle);
  }

  .menu-item.active {
    font-weight: 600;
    color: var(--typography-heading-primary);
  }

  .menu-right {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .status-icons {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .status-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    color: var(--typography-muted);
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.15s ease;
  }

  .status-icon i[data-lucide] {
    width: 14px;
    height: 14px;
  }

  .status-icon:hover {
    background: var(--color-border-subtle);
    color: var(--typography-heading-primary);
  }

  .clock {
    font-size: 13px;
    font-weight: 500;
    color: var(--typography-link);
    padding: 0 8px;
    height: 24px;
    display: flex;
    align-items: center;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.15s ease;
    font-feature-settings: "tnum";
    font-variant-numeric: tabular-nums;
  }

  .clock:hover {
    background: var(--color-border-subtle);
  }

  /* Hide menu items on smaller screens */
  @media (max-width: 768px) {
    .menu-items {
      display: none;
    }
    
    .menu-left {
      gap: 0;
    }
    
    .status-icons .status-icon:nth-child(n+3) {
      display: none;
    }
  }

  @media (max-width: 480px) {
    .macos-menu-bar {
      font-size: 12px;
      padding: 0 8px;
    }
    
    .status-icons .status-icon:nth-child(n+2) {
      display: none;
    }
  }
</style>

<script is:inline>
  function updateClock() {
    const now = new Date();
    const days = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 
                   'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    
    const dayName = days[now.getDay()];
    const day = now.getDate();
    const month = months[now.getMonth()];
    
    let hours = now.getHours();
    const minutes = now.getMinutes();
    const ampm = hours >= 12 ? 'PM' : 'AM';
    
    hours = hours % 12;
    hours = hours ? hours : 12; // 0 should be 12
    
    const formattedTime = `${dayName} ${day} ${month} ${hours}:${minutes.toString().padStart(2, '0')} ${ampm}`;
    
    const clockElement = document.getElementById('macos-clock');
    if (clockElement) {
      clockElement.textContent = formattedTime;
    }
  }
  
  // Update clock immediately and then every minute
  updateClock();
  setInterval(updateClock, 60000);

  // Initialize Lucide icons
  if (typeof lucide !== 'undefined') {
    lucide.createIcons();
  }
</script>