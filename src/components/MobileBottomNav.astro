---
import HeaderLink from './HeaderLink.astro';
---

<nav class="mobile-bottom-nav">
  <HeaderLink href="/" class="nav-item">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
      <polyline points="9,22 9,12 15,12 15,22"/>
    </svg>
    <span>Home</span>
  </HeaderLink>
  
  <HeaderLink href="/blog" class="nav-item">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
      <polyline points="14,2 14,8 20,8"/>
      <line x1="16" y1="13" x2="8" y2="13"/>
      <line x1="16" y1="17" x2="8" y2="17"/>
      <polyline points="10,9 9,9 8,9"/>
    </svg>
    <span>Blog</span>
  </HeaderLink>
  
  <HeaderLink href="/about" class="nav-item">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="12" cy="12" r="10"/>
      <path d="m9 12 2 2 4-4"/>
    </svg>
    <span>About</span>
  </HeaderLink>
</nav>

<style>
  .mobile-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: hsl(0 0% 0% / 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-top: 1px solid var(--color-border-subtle);
    display: none;
    align-items: center;
    justify-content: space-around;
    padding: 8px 16px calc(env(safe-area-inset-bottom, 0px) + 8px) 16px;
    z-index: 1000;
  }

  .mobile-bottom-nav :global(.nav-item) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: 8px 16px;
    border-radius: 12px;
    color: var(--typography-subtle);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
    border: none;
    min-width: 60px;
    text-align: center;
  }

  .mobile-bottom-nav :global(.nav-item:hover) {
    background: var(--color-border-subtle);
    color: var(--typography-link);
  }

  .mobile-bottom-nav :global(.nav-item.active) {
    background: var(--color-border);
    color: var(--typography-heading-primary);
  }

  .mobile-bottom-nav :global(.nav-item svg) {
    opacity: 0.8;
    transition: opacity 0.2s ease;
  }

  .mobile-bottom-nav :global(.nav-item:hover svg),
  .mobile-bottom-nav :global(.nav-item.active svg) {
    opacity: 1;
  }

  .mobile-bottom-nav :global(.nav-item span) {
    font-size: 0.7rem;
    font-weight: 500;
  }

  /* Show on mobile only */
  @media (max-width: 768px) {
    .mobile-bottom-nav {
      display: flex;
    }
  }

  /* Adjust for very small screens */
  @media (max-width: 480px) {
    .mobile-bottom-nav {
      height: 70px;
      padding: 6px 8px calc(env(safe-area-inset-bottom, 0px) + 6px) 8px;
    }

    .mobile-bottom-nav :global(.nav-item) {
      padding: 6px 12px;
      min-width: 50px;
    }

    .mobile-bottom-nav :global(.nav-item svg) {
      width: 20px;
      height: 20px;
    }

    .mobile-bottom-nav :global(.nav-item span) {
      font-size: 0.65rem;
    }
  }
</style>