---
import HeaderLink from './HeaderLink.astro';
---

<nav class="mobile-bottom-nav">
  <HeaderLink href="/" class="nav-item">
    <i data-lucide="home"></i>
    <span>Home</span>
  </HeaderLink>
  
  <HeaderLink href="/blog" class="nav-item">
    <i data-lucide="file-text"></i>
    <span>Blog</span>
  </HeaderLink>
  
  <HeaderLink href="/about" class="nav-item">
    <i data-lucide="user"></i>
    <span>About</span>
  </HeaderLink>
</nav>

<style>
  .mobile-bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: hsl(0 0% 0% / 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-top: 1px solid var(--color-border-subtle);
    display: none;
    align-items: center;
    justify-content: space-around;
    padding: 8px 16px calc(env(safe-area-inset-bottom, 0px) + 8px) 16px;
    z-index: 1000;
  }

  .mobile-bottom-nav :global(.nav-item) {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 4px;
    padding: 8px 16px;
    border-radius: 12px;
    color: var(--typography-subtle);
    text-decoration: none;
    font-size: 0.75rem;
    font-weight: 500;
    transition: all 0.2s ease;
    border: none;
    min-width: 60px;
    text-align: center;
  }

  .mobile-bottom-nav :global(.nav-item:hover) {
    background: var(--color-border-subtle);
    color: var(--typography-link);
  }

  .mobile-bottom-nav :global(.nav-item.active) {
    background: var(--color-border);
    color: var(--typography-heading-primary);
  }

  .mobile-bottom-nav :global(.nav-item i[data-lucide]) {
    width: 24px;
    height: 24px;
    opacity: 0.8;
    transition: opacity 0.2s ease;
    /* Thinner stroke for mobile bottom nav icons */
    stroke-width: 1.33px;
  }

  .mobile-bottom-nav :global(.nav-item:hover i[data-lucide]),
  .mobile-bottom-nav :global(.nav-item.active i[data-lucide]) {
    opacity: 1;
  }

  /* Ensure any Lucide icons within bottom nav use 1pt stroke */
  .mobile-bottom-nav :global([data-lucide]) { stroke-width: 1.33px; }

  .mobile-bottom-nav :global(.nav-item span) {
    font-size: 0.7rem;
    font-weight: 500;
  }

  /* Show on mobile only */
  @media (max-width: 768px) {
    .mobile-bottom-nav {
      display: flex;
    }
  }

  /* Adjust for very small screens */
  @media (max-width: 480px) {
    .mobile-bottom-nav {
      height: 70px;
      padding: 6px 8px calc(env(safe-area-inset-bottom, 0px) + 6px) 8px;
    }

    .mobile-bottom-nav :global(.nav-item) {
      padding: 6px 12px;
      min-width: 50px;
    }

    .mobile-bottom-nav :global(.nav-item i[data-lucide]) {
      width: 20px;
      height: 20px;
    }

    .mobile-bottom-nav :global(.nav-item span) {
      font-size: 0.65rem;
    }
  }
</style>

<script is:inline>
  // Initialize Lucide icons when DOM is ready
  function initializeMobileBottomNav() {
    if (typeof lucide !== 'undefined') {
      lucide.createIcons();
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeMobileBottomNav);
  } else {
    initializeMobileBottomNav();
  }
</script>
