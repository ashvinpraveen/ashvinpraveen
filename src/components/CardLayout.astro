---
import SideNavigation from './SideNavigation.astro';
import MobileNav from './MobileNav.astro';

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="card-wrapper">
  <div class="gradient-background" id="bg-layer"></div>
  <div class="main-card">
    <SideNavigation />
    <div class="content-area">
      <slot />
    </div>
  </div>
</div>
<MobileNav />

<script is:inline>
  (async function applyUserAppearance() {
    try {
      const path = location.pathname.replace(/^\/+/, '');
      const seg = path.split('/')[0] || '';
      const mainPages = new Set(['', 'app','blog','about','onboarding','sign-in','sign-up']);
      if (mainPages.has(seg)) return;
      const res = await fetch(`/api/settings/get?slug=${encodeURIComponent(seg)}`);
      if (!res.ok) return;
      const s = (await res.json())?.settings || {};
      const root = document.documentElement;
      if (s.themeMode && s.themeMode !== 'auto') root.setAttribute('data-theme', s.themeMode);
      if (s.primaryColor) {
        root.style.setProperty('--typography-link', s.primaryColor);
        root.style.setProperty('--typography-link-hover', s.primaryColor);
      }
      if (s.backgroundColor) document.body.style.backgroundColor = s.backgroundColor;
      if (s.fontBody) root.style.setProperty('--font-family-body', s.fontBody);
      if (s.fontHeading) root.style.setProperty('--font-family-heading', s.fontHeading);
      // Background image: if available, fetch via images endpoint
      if (s.backgroundImageId) {
        const url = `/api/images/${s.backgroundImageId}`;
        const bg = document.getElementById('bg-layer');
        if (bg) bg.style.backgroundImage = `url('${url}')`;
      }
    } catch {}
  })();
</script>

<style>
  .card-wrapper {
    min-height: 100vh;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem 2rem 1rem;
  }

  .gradient-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url('/images/gradientgreenwallpaper.avif');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    background-attachment: fixed;
    z-index: -2;
  }

  .gradient-background::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: hsl(0 0% 0% / 0.05);
    z-index: 1;
  }

  .main-card {
    width: 100%;
    max-width: 800px;
    height: calc(100vh - 5rem);
    min-height: calc(100vh - 5rem);
    background: hsl(0 0% 0% / 0.80);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--color-border-subtle);
    border-radius: 24px;
    box-shadow: 0 8px 30px hsl(0 0% 0% / 0.2), 0 4px 10px hsl(0 0% 0% / 0.12);
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    align-items: stretch;
  }

  .content-area {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  /* Make the card content scrollable if needed */
  .content-area :global(main) {
    flex: 1;
    overflow-y: auto;
  }

  /* Ensure footer stays at bottom */
  .content-area :global(footer) {
    flex-shrink: 0;
    margin-top: auto;
    padding: 0 2rem 1rem;
  }

  @media (max-width: 768px) {
    .main-card {
      min-height: calc(100vh - 5rem);
      border-radius: 16px;
      flex-direction: column;
    }

    .content-area :global(main) {
      padding-bottom: 4.5rem; /* bottom space for mobile nav */
    }

    .content-area :global(footer) {
      padding: 0 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .card-wrapper {
      padding: 1rem 0.5rem;
    }

    .main-card {
      min-height: calc(100vh - 3rem);
      border-radius: 12px;
    }

    .content-area :global(main) {
      padding-bottom: 1rem;
    }

    .content-area :global(footer) {
      padding: 0 1rem 1rem;
    }
  }
</style>
