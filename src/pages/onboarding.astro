  }

  .step {
    display: none;
  }

  .step.active {
    display: block;
  }

  .step h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: hsl(0 0% 100% / 0.95);
  }

  .step-description {
    color: hsl(0 0% 100% / 0.7);
    margin-bottom: 2rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: hsl(0 0% 100% / 0.9);
    font-weight: 500;
  }

