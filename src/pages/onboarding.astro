    margin-bottom: 2rem;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: hsl(235 100% 60%);
    border-radius: 2px;
    transition: width 0.3s ease;
    width: 33.33%;
  }

  .onboarding-header {
    text-align: center;
    margin-bottom: 3rem;
  }

